<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Get Rekt</title>
    @Styles.Render("~/Content/app.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="back-g">
    <div class="navbar navbar-inverse navbar-fixed-top back-black">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="navbar-brand site-title color-w"><span class="color-blue">Get</span> Rekt</span>
                <img src="/Content/image/common/logo-white.png" alt="logo" />
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.ActionLink("Participe !", "Index", "Contribute", new { area = "" }, new { @class = "participe-link back-y white-color" })
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content back-white">
        <div class="main-content col-md-9">
            @RenderBody()
        </div>
        <aside class="categorie-links col-md-3">
            <div class="video-title back-black white-color">
                <span class="title">Categories</span>
            </div>
        </aside>
    </div>

    <footer class="back-black white-color">
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*@Scripts.Render("~/Scripts/app.js")*@
    @RenderSection("scripts", required: false)
</body>
</html>
