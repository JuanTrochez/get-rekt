@model get_rekt.Models.VideoModel

@{
    ViewBag.Title = ViewBag.video.Title;
}

<div class="video-title back-black white-color">
    <div class="title">@ViewBag.video.Title</div>
</div>
<div>
    <iframe height="470" src="@ViewBag.video.VideoLink" frameborder="0" allowfullscreen></iframe>
    <div class="video-information back-g-light">
        <div class="description back-g color-w col-md-8">
            @ViewBag.video.Description
        </div>
        <div class="detail col-md-4">
            <div class="category">@ViewBag.video.Category</div>
            <div>Ajouté le @ViewBag.video.Date</div>
            <div class="rekt">75</div>            
            <div class="vote-rect">
                <button id="rekt-btn" data-rekt="@ViewBag.video.CategoryId">REKTED</button>
            </div>
        </div>
    </div>
</div>
